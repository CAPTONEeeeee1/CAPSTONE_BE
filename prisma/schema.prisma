generator client {
  provider = "prisma-client-js"
  // Tối ưu hóa từ Code 2
  engineType = "binary"
  previewFeatures = ["fullTextSearchPostgres"]
  binaryTargets = ["native"]
}

datasource db {
  provider    = "postgresql"
  url         = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// =======================================================
// === CORE ENTITIES ===
// =======================================================

model User {
  id                String            @id @default(cuid())
  email             String            @unique
  phone             String?           @unique
  passwordHash      String
  fullName          String
  
  // === TRƯỜNG BỔ SUNG TỪ CODE 2 ===
  avatar            String?
  description       String?
  role              String            @default("user") // user|admin
  status            String            @default("pending") // pending|active|suspended (Sử dụng pending làm default như Code 2)
  emailVerified     Boolean           @default(false)
  emailVerifiedAt   DateTime?
  
  // === TRƯỜNG CHUNG ===
  lastLoginAt       DateTime?
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  // === TRƯỜNG AUTH (Hợp nhất từ Code 1 & 2) ===
  // Xác định phương thức đăng nhập: 'email' (default) hoặc 'google' (Từ Code 1)
  authMethod        String            @default("email")
  // Token dùng để xác minh email thủ công (Code 1 - Giữ lại cho flow đơn giản)
  verificationToken String?

  // Tokens
  refreshTokens     RefreshToken[]
  
  // Bảng xác minh và reset mật khẩu (Từ Code 2)
  emailVerifications EmailVerification[]
  passwordResets    PasswordReset[]
  
  // === BACK-RELATIONS ===
  // Workspace ownership & membership
  ownedWorkspaces   Workspace[]         @relation("WorkspaceOwner")
  workspaceMemberships WorkspaceMember[]  @relation("WorkspaceMembership")
  
  // Workspace Invitations
  invitedWorkspaceMembers WorkspaceMember[] @relation("WorkspaceInviter")
  workspaceInvitationsSent WorkspaceInvitation[] @relation("WorkspaceInvitationSender") // Từ Code 2
  
  // Board creator
  boardsCreated     Board[]             @relation("BoardCreator")
  
  // Card relations
  reportedCards     Card[]              @relation("CardReporter")
  createdCards      Card[]              @relation("CardCreator")
  updatedCards      Card[]              @relation("CardUpdater")
  cardMemberships   CardMember[]        @relation("CardMembership")
  
  // Content
  commentsAuthored  Comment[]           @relation("CommentAuthor")
  cardAttachmentsUploaded CardAttachment[] @relation("CardAttachmentUploader") // Từ Code 2
  
  // Notifications & Activity (Từ Code 2)
  notificationsSent Notification[]      @relation("NotificationSender")
  notificationsReceived Notification[]  @relation("NotificationReceiver")
  notificationSettings NotificationSetting[]
  activityLogs      ActivityLog[]

  // Payments
  payments          Payment[]

  // Chat
  conversations     ConversationParticipant[]
  messagesSent      Message[]
}

model RefreshToken {
  id          String    @id @default(cuid())
  userId      String
  tokenHash   String
  userAgent   String?
  ipAddress   String?
  expiresAt   DateTime
  revokedAt   DateTime?
  createdAt   DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, expiresAt])
}

enum PlanType {
  FREE
  PREMIUM
}

model Workspace {
  id          String            @id @default(cuid())
  name        String
  description String?
  visibility  String            @default("private") // private|public
  ownerId     String
  owner       User              @relation("WorkspaceOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  
  plan        PlanType          @default(FREE)
  planExpiresAt DateTime?

  members     WorkspaceMember[]
  
  // Thêm invitations (Từ Code 2)
  invitations WorkspaceInvitation[] 
  
  boards      Board[]
  conversations Conversation[]

  payments    Payment[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  // Tùy chọn: Thêm Unique cho tên trong Workspace (nếu cần)
  // @@unique([ownerId, name])
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

model Payment {
  id            String        @id @default(cuid())
  orderId       String        @unique
  workspaceId   String
  userId        String?
  amount        Float
  status        PaymentStatus @default(PENDING)
  transactionNo String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User?     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([userId])
}


model WorkspaceMember {
  id          String    @id @default(cuid())
  workspaceId String
  userId      String
  role        String    @default("member") // owner|admin|member|guest
  invitedById String?
  invitedAt   DateTime?
  joinedAt    DateTime?

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user        User    @relation("WorkspaceMembership", fields: [userId], references: [id], onDelete: Cascade)
  invitedBy   User?   @relation("WorkspaceInviter", fields: [invitedById], references: [id])

  @@unique([workspaceId, userId])
  @@index([workspaceId])
}

// Bảng Lời mời Workspace (Từ Code 2)
model WorkspaceInvitation {
  id          String    @id @default(cuid())
  workspaceId String
  email       String
  role        String    @default("member") // admin|member|guest
  status      String    @default("pending") // pending|accepted|rejected|expired
  invitedById String
  invitedAt   DateTime  @default(now())
  respondedAt DateTime?
  expiresAt   DateTime

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  invitedBy User      @relation("WorkspaceInvitationSender", fields: [invitedById], references: [id], onDelete: Cascade)

  @@unique([workspaceId, email])
  @@index([workspaceId])
  @@index([email])
  @@index([status])
}

model Board {
  id          String    @id @default(cuid())
  workspaceId String
  name        String
  keySlug     String?
  mode        String    @default("private") // private|workspace|public
  isPinned    Boolean   @default(false)
  archivedAt  DateTime?
  createdById String

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  createdBy   User      @relation("BoardCreator", fields: [createdById], references: [id])
  
  // Loại bỏ BoardMember[] từ Code 1 vì Code 2 không có (giả định thành viên là thành viên Workspace)
  // boards members (Tuy nhiên, nếu cần tính năng BoardMember riêng, bạn cần bổ sung lại model này)
  // members     BoardMember[] // Nếu cần BoardMember riêng

  lists       List[]
  labels      Label[]
  cards       Card[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([workspaceId, name])
  @@index([workspaceId])
}

